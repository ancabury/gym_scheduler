.jumbotron
  .card.w-75.mx-auto
    .card-body
      %h5.card-title.text-center= "Schedule job for #{@gym_class.name}"
      .card-text
        = form_for(@scheduler, as: :scheduler, url: gym_class_scheduler_index_path(@gym_class, @scheduler)) do |f|
          .form-row
            .field.col-md-2
              = f.label :minute
              = f.text_field :minute, class: 'form-control'
            .field.col-md-2
              = f.label :hour
              = f.text_field :hour, class: 'form-control'
            .field.col-md-2
              = f.label :month
              = f.text_field :month, class: 'form-control'
            .field.col-md-3
              = f.label :day_of_month
              = f.text_field :day_of_month, class: 'form-control'
            .field.col-md-3
              = f.label :day_of_week
              = f.select :day_of_week, Scheduler.day_of_weeks.keys, {}, { class: 'form-control' }

          %br
          .actions.text-center
            = f.submit "Create", class: 'btn btn-primary'
            %a{href: root_path, class: 'btn btn-outline-primary'} Cancel
